{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Créé le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('d/m/Y à H:i') : '' }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">Voir</a>

                    {% if app.user %}

                        <a href="{{ path('app_article_edit', {'id': article.id}) }}">Éditer</a>

                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    {% if app.user %}
         <a href="{{ path('app_article_new') }}">Créer un nouvel article</a>
    {% endif %}

   
{% endblock %}
